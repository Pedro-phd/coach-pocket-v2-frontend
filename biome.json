{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"lineWidth": 120
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": { "noSvgWithoutTitle": "off" },
			"recommended": true,
			"complexity": { "noForEach": "off" },
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	}
}
